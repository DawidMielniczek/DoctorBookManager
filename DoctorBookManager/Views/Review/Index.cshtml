    <a  class="btn  btn-outline-dark " asp-action="AddReview">
        Utwórz recencję
    </a>
    @if (Model.Any())
    {
        <div class="content">
            <table class="tableView">
                <thead>
                    <tr>
                        <th>Imie Nazwisko</th>
                        <th>Data</th>
                        <th>Ocena</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.Name</td>
                            <td>@review.CreationDate</td>
                            <td>@review.Grade</td>
                            <td>
                                @Html.ActionLink("Wyświetl", "Details", new { id = review.Id  }, new {@class = "btn"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
   
</body>
</html>



